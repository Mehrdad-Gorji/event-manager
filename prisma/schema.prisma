// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== AUTH ====================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  phone         String?
  passwordHash  String?
  role          UserRole  @default(CUSTOMER)
  isActive      Boolean   @default(true)
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  bookings      Booking[]
  checkIns      CheckIn[]
  auditLogs     AuditLog[]
  reviews       EventReview[]
  notifications Notification[]
  wishlist      Wishlist[]

  @@index([email])
  @@index([role])
}

enum UserRole {
  CUSTOMER
  STAFF
  ADMIN
  MANAGER
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==================== EVENTS ====================

model Event {
  id              String      @id @default(cuid())
  title           String
  description     String?     @db.Text
  rules           String?     @db.Text
  coverImage      String?
  eventDate       DateTime
  startTime       String
  endTime         String?
  doorsOpenTime   String?
  maxCapacity     Int
  bookingMode     BookingMode @default(GENERAL)
  reEntryAllowed  Boolean     @default(false)
  status          EventStatus @default(DRAFT)
  
  adultPrice      Decimal     @db.Decimal(10, 2)
  childPrice      Decimal?    @db.Decimal(10, 2)
  vipPrice        Decimal?    @db.Decimal(10, 2)
  
  serviceFeePercent Decimal   @default(0) @db.Decimal(5, 2)
  taxPercent        Decimal   @default(0) @db.Decimal(5, 2)
  
  venueName       String
  venueAddress    String?
  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  bookings        Booking[]
  ticketTiers     TicketTier[]
  addOns          EventAddOn[]
  discountCodes   DiscountCode[]
  reviews         EventReview[]
  galleryImages   EventGalleryImage[]
  wishlistItems   Wishlist[]
  
  venueLayoutId   String?
  venueLayout     VenueLayout? @relation(fields: [venueLayoutId], references: [id])

  @@index([eventDate])
  @@index([status])
  @@index([venueLayoutId])
}

model VenueLayout {
  id          String   @id @default(cuid())
  name        String
  description String?
  canvasWidth Int      @default(800)
  canvasHeight Int     @default(600)
  
  // Physical dimensions in meters
  width       Float    @default(20)
  depth       Float    @default(15)

  elements    Json     // Array of { id, type, x, y, label, tierId?, ... }
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  events      Event[]
}

model TicketTier {
  id          String   @id @default(cuid())
  eventId     String
  name        String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  capacity    Int?
  sectionMatcher String? // Optional: Matches "section" label in Venue Layout elements
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  bookingItems BookingItem[]

  @@index([eventId])
}

model EventAddOn {
  id          String   @id @default(cuid())
  eventId     String
  name        String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  stock       Int?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  bookingItems BookingItem[]

  @@index([eventId])
}

enum BookingMode {
  GENERAL
  SEATED
}

enum EventStatus {
  DRAFT
  PUBLISHED
  SOLDOUT
  CANCELLED
  COMPLETED
}

// ==================== BOOKINGS ====================

model Booking {
  id              String        @id @default(cuid())
  bookingNumber   String        @unique
  userId          String?
  eventId         String
  
  guestEmail      String?
  guestPhone      String?
  guestName       String?
  
  // Legacy counts (to be deprecated)
  adultCount      Int           @default(0)
  childCount      Int           @default(0)
  vipCount        Int           @default(0)
  
  subtotal        Decimal       @db.Decimal(10, 2)
  serviceFee      Decimal       @default(0) @db.Decimal(10, 2)
  tax             Decimal       @default(0) @db.Decimal(10, 2)
  total           Decimal       @db.Decimal(10, 2)
  
  paymentIntentId String?
  paymentStatus   PaymentStatus @default(PENDING)
  paidAt          DateTime?
  
  status          BookingStatus @default(PENDING)
  cancelledAt     DateTime?
  refundAmount    Decimal?      @db.Decimal(10, 2)
  
  notes           String?       @db.Text
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  user            User?         @relation(fields: [userId], references: [id])
  event           Event         @relation(fields: [eventId], references: [id])
  tickets         Ticket[]
  items           BookingItem[]

  @@index([userId])
  @@index([eventId])
  @@index([bookingNumber])
  @@index([status])
}

model BookingItem {
  id           String   @id @default(cuid())
  bookingId    String
  ticketTierId String?
  addOnId      String?
  quantity     Int
  unitPrice    Decimal  @db.Decimal(10, 2)
  totalPrice   Decimal  @db.Decimal(10, 2)

  booking      Booking     @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  ticketTier   TicketTier? @relation(fields: [ticketTierId], references: [id])
  addOn        EventAddOn? @relation(fields: [addOnId], references: [id])
  
  seatId       String?     // Optional: ID of the seat from Venue Layout elements

  @@index([bookingId])
  @@index([ticketTierId])
  @@index([addOnId])
  @@index([seatId])
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  REFUNDED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

// ==================== TICKETS & CHECK-IN ====================

model Ticket {
  id              String       @id @default(cuid())
  bookingId       String
  ticketType      TicketType   @default(GROUP)
  qrToken         String       @unique
  personName      String?
  totalPersons    Int          @default(1)
  checkedInCount  Int          @default(0)
  status          TicketStatus @default(VALID)
  seatId          String?      // [NEW] Linked seat ID for individual tickets
  createdAt       DateTime     @default(now())

  booking         Booking      @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  checkIns        CheckIn[]

  @@index([bookingId])
  @@index([qrToken])
}

enum TicketType {
  GROUP
  INDIVIDUAL
}

enum TicketStatus {
  VALID
  USED
  CANCELLED
}

model CheckIn {
  id              String   @id @default(cuid())
  ticketId        String
  staffUserId     String?
  personsEntered  Int
  scannedAt       DateTime @default(now())
  notes           String?
  isCorrection    Boolean  @default(false)

  ticket          Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  staffUser       User?    @relation(fields: [staffUserId], references: [id])

  @@index([ticketId])
  @@index([scannedAt])
}

// ==================== AUDIT LOG ====================

model AuditLog {
  id          String   @id @default(cuid())
  userId      String?
  action      String
  entityType  String?
  entityId    String?
  oldValues   Json?
  newValues   Json?
  ipAddress   String?
  createdAt   DateTime @default(now())

  user        User?    @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([entityType, entityId])
  @@index([createdAt])
}

// ==================== DISCOUNT CODES ====================

model DiscountCode {
  id              String        @id @default(cuid())
  code            String        @unique
  description     String?
  discountType    DiscountType  @default(PERCENTAGE)
  discountValue   Decimal       @db.Decimal(10, 2)
  minPurchase     Decimal?      @db.Decimal(10, 2)
  maxDiscount     Decimal?      @db.Decimal(10, 2)
  usageLimit      Int?
  usedCount       Int           @default(0)
  validFrom       DateTime      @default(now())
  validUntil      DateTime?
  eventId         String?       // Optional: limit to specific event
  isActive        Boolean       @default(true)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  event           Event?        @relation(fields: [eventId], references: [id])

  @@index([code])
  @@index([eventId])
  @@index([validFrom, validUntil])
}

enum DiscountType {
  PERCENTAGE
  FIXED
}

// ==================== EVENT REVIEWS ====================

model EventReview {
  id          String   @id @default(cuid())
  eventId     String
  userId      String?
  guestName   String?
  guestEmail  String?
  rating      Int      // 1-5 stars
  title       String?
  comment     String?  @db.Text
  isVerified  Boolean  @default(false) // Verified purchase
  isApproved  Boolean  @default(false) // Admin approved
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user        User?    @relation(fields: [userId], references: [id])

  @@index([eventId])
  @@index([userId])
  @@index([rating])
}

// ==================== EVENT GALLERY ====================

model EventGalleryImage {
  id          String   @id @default(cuid())
  eventId     String
  imageUrl    String
  caption     String?
  sortOrder   Int      @default(0)
  isHero      Boolean  @default(false)
  createdAt   DateTime @default(now())

  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@index([eventId])
}

// ==================== NOTIFICATIONS ====================

model Notification {
  id          String           @id @default(cuid())
  userId      String
  type        NotificationType
  title       String
  message     String           @db.Text
  link        String?
  isRead      Boolean          @default(false)
  createdAt   DateTime         @default(now())

  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isRead])
  @@index([createdAt])
}

enum NotificationType {
  BOOKING_CONFIRMED
  BOOKING_CANCELLED
  EVENT_REMINDER
  EVENT_UPDATE
  PAYMENT_RECEIVED
  SYSTEM
}

// ==================== NEWSLETTER ====================

model NewsletterSubscriber {
  id          String   @id @default(cuid())
  email       String   @unique
  name        String?
  isActive    Boolean  @default(true)
  subscribedAt DateTime @default(now())
  unsubscribedAt DateTime?

  @@index([email])
  @@index([isActive])
}

// ==================== WISHLIST ====================

model Wishlist {
  id        String   @id @default(cuid())
  userId    String
  eventId   String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@unique([userId, eventId])
  @@index([userId])
  @@index([eventId])
}

// ==================== CONTACT MESSAGES ====================

model ContactMessage {
  id          String   @id @default(cuid())
  name        String
  email       String
  subject     String
  message     String   @db.Text
  isRead      Boolean  @default(false)
  isReplied   Boolean  @default(false)
  createdAt   DateTime @default(now())
  repliedAt   DateTime?

  @@index([isRead])
  @@index([createdAt])
}

